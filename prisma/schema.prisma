generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Project {
  id              Int        @id @default(autoincrement())
  name            String
  email           String?
  company         String?
  title           String?
  checkSize       String?
  details         String?
  twitterPicture  String?
  site            String?
  twitterVerified Boolean?   @default(false)
  hidden          Boolean?   @default(false)
  rank            Int?       @default(0)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  checksize       CheckSize? @relation(fields: [checksize_id], references: [id])
  checksize_id    Int?

  // new fields
  slogan String?
  logo   String?
  tools  String?

  twitterUrl   String?
  githubUrl    String?
  linkedinUrl  String?
  instagramUrl String?
  facebookUrl  String?
}

model CheckSize {
  id     Int       @unique
  name   String    @unique
  angels Project[]
}
